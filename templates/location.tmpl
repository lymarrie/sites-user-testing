---
{
    "streamId": "pages-location-stream",
    "urlFormat": "{{.c_slug}}"
}
---

{{define "location.tmpl" -}}
<html>
    <body>
        <h1> Welcome to Luc&#39;s Electronics - {{.name}}</h1>
        <p>Address: 
         {{ range $key, $value := .address }}
           <li><strong>{{ $key }}</strong>: {{ $value }}</li>
        {{ end }} </p>
        <p>Hours: 
          {{ range $key, $value := .hours }}
               <li><strong>{{ $key }}</strong>: {{ $value }}</li>
          {{ end }}
        </p>
        <p> <h2> This location is located in </h2> </p>
        {{ range $key, $value := .c_parents.name}}
          <li><strong>{{ $key }}</strong>: {{ $value }}</li>
          <li> {{.name}} </li>
      {{end}}
    </body>
</html>
{{end}}
